<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Vendors</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
	</head>
	<body>
		<h1 class="display-1 text-center">Vendors</h1>
		<ul>
			@using BakeryOrderManager.Models
			@foreach (Vendor vendor in @Model)
			{
				<li><a href="/vendors/@vendor.Name">@vendor.Name</a></li>
			}
		</ul>
		<a href="/vendors/new"><button class="btn btn-success">Add Vendor</button></a>
		<a href="/"><button class="btn btn-primary">Home</button></a>
	</body>
</html>
